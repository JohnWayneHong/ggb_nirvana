<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_public_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_20">

                <TextView
                    android:id="@+id/user_login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="账号登录"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/text_25"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_login_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ggb.nirvanaclub.view.ClearEditText
                        android:id="@+id/et_user_login_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/me_user_login_account_pwd_hint_string"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHighlight="@color/text_highlight_color"
                        android:textColorHint="@color/gray_text_color"
                        android:textCursorDrawable="@drawable/edit_text_cursor"
                        android:textSelectHandle="@drawable/ic_text_select_handle"
                        android:textSelectHandleLeft="@drawable/ic_text_select_handle_left"
                        android:textSelectHandleRight="@drawable/ic_text_select_handle_right"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_login_mobile"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ggb.nirvanaclub.view.ClearEditText
                        android:id="@+id/et_user_login_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/me_user_login_account_code_hint_string"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColorHighlight="@color/text_highlight_color"
                        android:textColorHint="@color/gray_text_color"
                        android:textCursorDrawable="@drawable/edit_text_cursor"
                        android:textSelectHandle="@drawable/ic_text_select_handle"
                        android:textSelectHandleLeft="@drawable/ic_text_select_handle_left"
                        android:textSelectHandleRight="@drawable/ic_text_select_handle_right"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_login_mobile_code"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/user_login_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/me_user_login_code_hint_string"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:textColorHighlight="@color/text_highlight_color"
                        android:textColorHint="@color/gray_text_color"
                        android:textCursorDrawable="@drawable/edit_text_cursor"
                        android:textSelectHandle="@drawable/ic_text_select_handle"
                        android:textSelectHandleLeft="@drawable/ic_text_select_handle_left"
                        android:textSelectHandleRight="@drawable/ic_text_select_handle_right"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/user_login_get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/user_login_code"
                        android:layout_alignBottom="@id/user_login_code"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="@string/me_user_login_get_code_string"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/text_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_user_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ggb.nirvanaclub.view.ClearEditText
                        android:id="@+id/user_login_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/me_user_login_pwd_hint_string"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHighlight="@color/text_highlight_color"
                        android:textColorHint="@color/gray_text_color"
                        android:textCursorDrawable="@drawable/edit_text_cursor"
                        android:textSelectHandle="@drawable/ic_text_select_handle"
                        android:textSelectHandleLeft="@drawable/ic_text_select_handle_left"
                        android:textSelectHandleRight="@drawable/ic_text_select_handle_right"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55"
                    android:layout_marginTop="@dimen/dimen_15">

                    <com.ggb.nirvanaclub.view.VerifySeekBar
                        android:id="@+id/user_login_verify_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_4"
                        app:vsb_shadowWidth="@dimen/dimen_50"
                        app:vsb_textSize="@dimen/text_16" />
                    <!--
                     因为draggable在VerifySeekBar上方
                     滑动到draggable时，VerifySeekBar无法触发事件
                     所以将 clickable 设置成 false，让draggable不响应点击
                     事件就会传给VerifySeekBar
                     ShadowLayout 默认会将android:clickable设置成
                     app:clickable的值，app:clickable 默认是true
                     所以默认事件只会传递给 ShadowLayout
                     -->
                    <com.lihang.ShadowLayout
                        android:id="@+id/user_login_verify_draggable"
                        android:layout_width="@dimen/dimen_55"
                        android:layout_height="match_parent"
                        app:clickable="false"
                        app:hl_shadowColor="@color/black"
                        app:hl_shadowLimit="@dimen/dimen_2">

                        <com.ggb.nirvanaclub.view.VerifyDraggable
                            android:id="@+id/user_login_verify_actual_draggable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_2"
                            android:padding="@dimen/dimen_12" />

                    </com.lihang.ShadowLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/user_login_checkbox_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_5">

                    <LinearLayout
                        android:id="@+id/ll_user_login_must_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/user_login_must_read_checkbox"
                            style="@style/CircleCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:layout_marginEnd="@dimen/dimen_5"
                            android:background="@color/transparent" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_user_login_must_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20">

                    <Button
                        android:id="@+id/user_login_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_login_btn"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

<!--                    <View-->
<!--                        android:id="@+id/user_login_btn_shadow"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@color/translucent" />-->

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_login_change_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_user_login_title_pwd_string"
                        android:textColor="@color/me_user_login_options_text_color" />

                    <View
                        android:layout_width="@dimen/dimen_1"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dimen_10"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/user_login_problem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_login_problem_string"
                        android:textColor="@color/me_user_login_options_text_color" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/user_login_wx"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:src="@drawable/ic_wx" />

                    <ImageView
                        android:id="@+id/iv_user_login_qq"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginHorizontal="@dimen/dimen_20"
                        android:src="@drawable/ic_qq" />

                    <ImageView
                        android:id="@+id/user_login_wb"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:src="@drawable/ic_wb" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>