<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/grid_pattern"
    tools:context=".view.dialog.CrashActivityDialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/welcome_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:text="很抱歉，牛蛙呐被黑客入侵了"/>

                <ImageView
                    android:id="@+id/iv_crash_bear"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_200"
                    android:src="@mipmap/bear_crazy"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:gravity="center">

                    <Button
                        android:id="@+id/tv_cash_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_38"
                        android:background="@drawable/bg_main_full_20"

                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:text="@string/crash_error_close_app"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/tv_cash_restart"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_38"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:background="@drawable/shape_round_gray_15dp"

                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:text="重启应用"
                        android:textColor="@color/text_main_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70"
                    android:gravity="center">

                    <Button
                        android:id="@+id/tv_cash_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_38"

                        android:background="@drawable/shape_round_green_15dp"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:text="发送错误报告"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="错误日志路径："
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold"
                        android:textColor="@color/text_main_color"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_crash_path"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold"
                        android:textColor="@color/me_banner_start_color"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="入侵原因："
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_crash_error"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold"
                        android:textColor="@color/text_main_color"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>