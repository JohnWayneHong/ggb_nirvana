<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_150"
    android:layout_height="@dimen/dimen_30"
    android:gravity="center_vertical"
    android:background="@drawable/bg_white_full_18">

    <RelativeLayout
        android:id="@+id/rl_walk"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/v_walk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main_1_full_18"/>

        <TextView
            android:id="@+id/tv_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_14"
            android:text="步行"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_car"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/v_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/bg_second_1_full_18"/>

        <TextView
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/title_main_color"
            android:textSize="@dimen/text_14"
            android:text="车行"/>

    </RelativeLayout>

</LinearLayout>
