<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <declare-styleable name="CustomHorizontalProgresStyle">
        <attr name="HorizontalProgresUnReachColor" />
        <attr name="HorizontalProgresUnReachHeight" />
        <attr name="HorizontalProgresReachColor" />
        <attr name="HorizontalProgresReachHeight" />
        <attr name="HorizontalProgresTextColor" />
        <attr name="HorizontalProgresTextSize" />
        <attr name="HorizontalProgresTextOffset" />
    </declare-styleable>

    <attr name="HorizontalProgresUnReachColor" format="color" />
    <attr name="HorizontalProgresUnReachHeight" format="dimension" />
    <attr name="HorizontalProgresReachColor" format="color" />
    <attr name="HorizontalProgresReachHeight" format="dimension" />
    <attr name="HorizontalProgresTextColor" format="color" />
    <attr name="HorizontalProgresTextSize" format="dimension" />
    <attr name="HorizontalProgresTextOffset" format="dimension" />

    <!--  底部导航栏样式  -->
    <style name="HomeBottomTextThem" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_3</item>
        <item name="android:textColor">@color/home_bottom_text</item>
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <!--  夜间模式切换  -->
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- 聊天的消息-文字   -->
    <style name="TextTime">
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">@color/text_second_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  消息红点     -->
    <style name="NoticeSpot">
        <item name="android:background">@drawable/bg_main_full_5</item>
        <item name="android:layout_width">@dimen/dimen_10</item>
        <item name="android:layout_height">@dimen/dimen_10</item>
    </style>

</resources>