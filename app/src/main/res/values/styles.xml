<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <declare-styleable name="CustomHorizontalProgresStyle">
        <attr name="HorizontalProgresUnReachColor" />
        <attr name="HorizontalProgresUnReachHeight" />
        <attr name="HorizontalProgresReachColor" />
        <attr name="HorizontalProgresReachHeight" />
        <attr name="HorizontalProgresTextColor" />
        <attr name="HorizontalProgresTextSize" />
        <attr name="HorizontalProgresTextOffset" />
    </declare-styleable>

    <attr name="HorizontalProgresUnReachColor" format="color" />
    <attr name="HorizontalProgresUnReachHeight" format="dimension" />
    <attr name="HorizontalProgresReachColor" format="color" />
    <attr name="HorizontalProgresReachHeight" format="dimension" />
    <attr name="HorizontalProgresTextColor" format="color" />
    <attr name="HorizontalProgresTextSize" format="dimension" />
    <attr name="HorizontalProgresTextOffset" format="dimension" />

    <!--  底部导航栏样式  -->
    <style name="HomeBottomTextThem" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_3</item>
        <item name="android:textColor">@color/home_bottom_text</item>
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <!--  夜间模式切换  -->
    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- 聊天的消息-文字   -->
    <style name="TextTime">
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">@color/text_second_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  消息红点     -->
    <style name="NoticeSpot">
        <item name="android:background">@drawable/bg_main_full_5</item>
        <item name="android:layout_width">@dimen/dimen_10</item>
        <item name="android:layout_height">@dimen/dimen_10</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明
        <item name="android:backgroundDimEnabled">false</item>
        -->
        <!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 聊天webView标题栏背景 -->
    <style name="activityContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/light_gray</item>
    </style>
    <!-- 标题栏背景 -->
    <style name="titleBackGroundStyle">
        <item name="android:id">@id/title_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:background">@color/navigation_color</item>
    </style>
    <!-- 标题返回按钮 -->
    <style name="titleBackStyle">
        <item name="android:id">@id/back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/picture_icon_back_arrow</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- 标题栏文字 -->
    <style name="titleTextStyle">
        <item name="android:textColor">@color/text_main_color</item>
        <item name="android:id">@id/title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="progressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_color_horizontal</item>
    </style>
    <style name="LineStyle">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!--  玩安卓的RecycleView  -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarSize">@dimen/dimen_2</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- WebContent的Toolbar   -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 设置Toolbar标题字体的大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_18</item>
    </style>


</resources>